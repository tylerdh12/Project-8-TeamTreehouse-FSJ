extends ../layout

block content
  input(name="search" type="text" id="searchInput" placeholder="Search")
  h1= title
  p
    a(href="/books/new", class="button") Create New Book
  table(style='width:100%')
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
      tbody
        each book in books
          tr
            td 
              a(href="/books/" + book.id + "/book_details")= book.title
            td= book.author
            td= book.genre
            td= book.year

  include paginate